    <properties>
        <main.dir>${basedir}</main.dir>
        <kaa.version>0.10.0-SNAPSHOT</kaa.version>
        <jackson.version>2.4.1</jackson.version>
        <avro.version>1.7.5</avro.version>
        <junit.version>4.11</junit.version>
        <slf4j.version>1.7.7</slf4j.version>
        <logback.version>1.1.2</logback.version>
        <mockito.version>1.9.5</mockito.version>
        <jetty.version>9.2.2.v20140723</jetty.version>
        <rat.version>0.10</rat.version>
        <grizzly.version>2.3.22</grizzly.version>
    </properties>

    <modules>
        <module>common</module>
        <module>iotworld</module>
        <module>smarthousedemo</module>
        <module>configurationdemo</module>
        <module>credentialsdemo</module>
        <module>notificationdemo</module>
        <module>datacollectiondemo</module>
        <module>eventdemo</module>
        <module>cityguide</module>
        <module>cellmonitor</module>
        <!-- <module>photoframe</module> -->
        <module>verifiersdemo</module>
        <module>powerplant</module>
