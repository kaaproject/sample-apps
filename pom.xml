        <!-- <module>zeppelindemo</module> -->
        <!-- <module>sparkdemo</module> -->
        <!-- <module>cassandrademo</module> -->
        <!-- <module>stormdemo</module>  -->
        <module>profilingdemo</module>
    </modules>

    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>repository</id>
            <distributionManagement>
                <repository>
                    <id>kaa.release</id>
                    <url>http://repository.kaaproject.org/repository/internal/</url>
                </repository>
                <snapshotRepository>
                    <id>kaa.snapshots</id>
                    <url>http://repository.kaaproject.org/repository/snapshots/</url>
                </snapshotRepository>
            </distributionManagement>
        </profile>
        <profile>
            <id>license</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.mycila.maven-license-plugin</groupId>
                        <artifactId>maven-license-plugin</artifactId>
                        <version>1.8.0</version>
                        <configuration>
                            <header>copyright.txt</header>
                            <strictCheck>true</strictCheck>
                            <mapping>
                                <cmake>SCRIPT_STYLE</cmake>
                                <txt>SCRIPT_STYLE</txt>
                                <md>SCRIPT_STYLE</md>
                                <yaml>SCRIPT_STYLE</yaml>
                                <properties>SCRIPT_STYLE</properties>
                                <cfg>SCRIPT_STYLE</cfg>
                                <config>SCRIPT_STYLE</config>
                                <mak>SCRIPT_STYLE</mak>
                                <m>JAVADOC_STYLE</m>
                                <js>JAVADOC_STYLE</js>
                                <hpp>JAVADOC_STYLE</hpp>
                                <xib>XML_STYLE</xib>
                            </mapping>
                            <includes>
                                <include>**/*.sh</include>
                                <include>**/*.bat</include>
                                <include>**/*.yaml</include>
                                <include>**/*.md</include>
                                <include>**/*.xml</include>
                                <include>**/*.html</include>
                                <include>**/*.txt</include>
                                <include>**/*.cmake</include>
                                <include>**/*.java</include>
                                <include>**/*.cpp</include>
                                <include>**/*.hpp</include>
                                <include>**/*.c</include>
                                <include>**/*.h</include>
                                <include>**/*.m</include>
                                <include>**/*.xib</include>
                                <include>**/*.js</include>
                                <include>**/*.cfg</include>
                                <include>**/*.config</include>
                                <include>**/*.mak</include>
                            </includes>
                            <excludes>
                                <exclude>**/thirdparty/**</exclude>
                                <exclude>README.md</exclude>
                            </excludes>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>validate</phase>
                                <goals>
                                    <goal>format</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.5.1</version>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.7</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>2.2.1</version>
                </plugin>
                <!--This plugin's configuration is used to store Eclipse
                    m2e settings only. It has no influence on the Maven build itself. -->
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>
                                            org.apache.maven.plugins
                                        </groupId>
                                        <artifactId>
                                            maven-dependency-plugin
                                        </artifactId>
                                        <versionRange>
                                            [2.1,)
                                        </versionRange>
                                        <goals>
                                            <goal>
                                                copy-dependencies
                                            </goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore></ignore>
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.rat</groupId>
                <artifactId>apache-rat-plugin</artifactId>
                <version>${rat.version}</version>
                <configuration>
                    <excludes>
                        <exclude>doc/**</exclude>
                        <exclude>gh-pages-stub/index.md</exclude>
                        <exclude>gh-pages-stub/_config.yml</exclude>
                        <exclude>gh-pages-stub/public/js/jquery.csv.min.js</exclude>
                        <exclude>gh-pages-stub/public/js/lunr.min.js</exclude>
                        <exclude>gh-pages-stub/public/js/scripts.js</exclude>
                        <exclude>gh-pages-stub/public/js/generateTable.js</exclude>
                        <exclude>gh-pages-stub/_includes/variables.md</exclude>
                        <exclude>gh-pages-stub/_includes/test.md</exclude>
                        <exclude>gh-pages-stub/_data/permanent_config.yml</exclude>
                        <exclude>gh-pages-stub/atom.xml</exclude>
                        <exclude>**/LaunchScreen.storyboard</exclude>
                        <exclude>**/Main.storyboard</exclude>
                        <exclude>**/*.json</exclude>
                        <exclude>**/*.properties</exclude>
                        <exclude>**/tmp_deb_control/control</exclude>
                        <exclude>**/deb/control/control</exclude>
                        <exclude>**/.classpath</exclude>
                        <exclude>**/.project</exclude>
                        <exclude>**/.settings/**</exclude>
                        <exclude>**/logs/**</exclude>
                        <exclude>**/target/**</exclude>
                        <exclude>suppressions.xml</exclude>
                        <exclude>**/.gwt/**</exclude>
                        <exclude>**/*.css</exclude>
                        <exclude>**/*.avsc</exclude>
                        <exclude>**/*.html</exclude>
                        <exclude>**/*_bckp</exclude>
                        <exclude>**/*.log</exclude>
                        <exclude>**/*.template</exclude>
                        <exclude>**/kaa-it.log.*</exclude>
                        <exclude>**/_remote.repositories</exclude>
                        <exclude>**/*client.log.*</exclude>
                        <exclude>**/*server.log.*</exclude>
                        <exclude>**/gcovr.log</exclude>
                        <exclude>**/gcovr-report.xml</exclude>
                        <exclude>**/unittest_result.xml</exclude>
                        <exclude>**/test/resources/kaa_status.file</exclude>
                        <exclude>**/build/**</exclude>
                        <exclude>**/gcovr</exclude>
                        <exclude>**/README.md</exclude>
                        <exclude>**/gen/*.java</exclude>
                        <exclude>**/gen/**/*.java</exclude>
                        <exclude>**/*.avsc</exclude>
                        <exclude>**/*.iml</exclude>
                        <exclude>**/.idea/**</exclude>
                        <exclude>**/*.readme</exclude>
                        <exclude>**/appcompat-v7/**</exclude>
                        <exclude>**/support-v4/**</exclude>
                        <exclude>**/bin/**</exclude>
                        <exclude>**/thirdparty/**</exclude>
                        <exclude>**/security.policy</exclude>
                        <exclude>**/*-transport.config</exclude>
                        <exclude>**/akka.conf</exclude>
                        <exclude>**/*.cql</exclude>
                        <exclude>**/openssl.framework/**</exclude>
                        <exclude>**/openssl/**</exclude>
                        <exclude>**/*xcodeproj/**</exclude>
                        <exclude>**/*.plist</exclude>
                        <exclude>**/*.cproject</exclude>
                        <exclude>common/c/targets/esp8266/ld/eagle.app.v6.ld</exclude>
                        <exclude>common/c/targets/esp8266/ld/eagle.rom.addr.v6.ld</exclude>
                        <exclude>common/c/targets/esp8266/driver/uart.c</exclude>
                        <exclude>common/c/targets/esp8266/driver/uart.h</exclude>
                        <exclude>common/c/targets/esp8266/driver/uart_register.h</exclude>
                        <exclude>common/c/targets/esp8266/driver/gpio.c</exclude>
                        <exclude>common/c/targets/esp8266/driver/gpio.h</exclude>
                        <exclude>**/VoltageReport.java</exclude>
                        <exclude>**/VoltageSample.java</exclude>
                        <exclude>**/dev.config</exclude>
                        <exclude>**/iotworld/connectedcar/RfidLog.java</exclude>
                        <exclude>**/iotworld/lights/traffic/EventType.java</exclude>
                        <exclude>**/iotworld/lights/traffic/TrafficLightsLog.java</exclude>
                        <exclude>**/resources/profile_filters.txt</exclude>
                        <exclude>**/PUT_SDK_HERE</exclude>
                        <exclude>scripts/cmakegen/Posix.cmake</exclude>
                        <exclude>scripts/cmakegen/Embedded.cmake</exclude>
                        <exclude>scripts/cmakegen/Definition.cmake</exclude>
                        <exclude>scripts/cmakegen/README.md</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <version>1.0.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>validate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <validationSets>
                        <validationSet>
                            <dir>.</dir>
                            <includes>
                                <include>*/resources/projects.xml</include>
                            </includes>
                            <systemId>common/src/main/resources/demo/projects/demo_projects_schema.xsd</systemId>
                        </validationSet>
                    </validationSets>
                </configuration>
            </plugin>
        </plugins>
    </build>

